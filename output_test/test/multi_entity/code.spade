entity actual_counter(clk: clk, rst: bool, max: int<8>) -> int<8> {
    reg(clk) value reset (rst: 0) =
        if value == max then {
            0
        }
        else {
            value + 1
        };

    value
}

entity counter(clk: clk, rst: bool, max: int<8>) -> int<8> {
    inst actual_counter{clk, rst, max}
}

