use std::conv::trunc;
entity counter(clk: clock, rst: bool) -> (int<8>, int<8>) {
    decl x, y;

    let x_at_max = x == 8;
    let y_at_max = y == 6;

    reg(clk) x reset (rst: 0) =
        if x_at_max {
            if y_at_max {
                0
            }
            else {
                x
            }
        }
        else {
            trunc(x + 1)
        };

    reg(clk) y reset (rst: 0) =
        if x_at_max {
            if y_at_max {
                0
            }
            else {
                trunc(y + 1)
            }
        }
        else {
            y
        };

    (x, y)
}

